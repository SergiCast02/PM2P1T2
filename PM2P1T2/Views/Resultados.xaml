<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PM2P1T2.Views.Resultados">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" 
                HorizontalOptions="FillAndExpand" Padding="25,25,25,25" BackgroundColor="DodgerBlue">
            <StackLayout Padding="10,10,10,10">
                <Label Text="{Binding nombres}" TextColor="White" HorizontalOptions="CenterAndExpand" FontSize="20"
                       x:Name="nombres"/>
                <Label Text="{Binding apellidos}" TextColor="White" HorizontalOptions="CenterAndExpand" FontSize="20"
                       x:Name="apellidos"/>
                <Label Text="{Binding edad}" TextColor="White" HorizontalOptions="CenterAndExpand" FontSize="20"
                       x:Name="edad"/>
                <Label Text="{Binding correo}" TextColor="White" HorizontalOptions="CenterAndExpand" FontSize="20"
                       x:Name="correo"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>